<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
    </data>
    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:background="@color/color_009FF8"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/main_img_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_add"/>
            </LinearLayout>
            <TextView
                android:id="@+id/main_top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/main_top_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备"
                android:textSize="16sp"
                android:padding="16dp"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xunhe.ilpw.activity.MainActivity">
    <LinearLayout
        android:id="@+id/main_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="5dp"

        android:background="@android:color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/main_tv_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:textColor="@drawable/radiobutton_textcolor"
            android:drawableTop="@drawable/radiobutton_home_imgcolor"
            android:gravity="center_horizontal"
            android:drawablePadding="3dp"
            android:textSize="14sp"
            android:text="主页" />
        <TextView
            android:id="@+id/main_tv_record"
            android:layout_width="0dp"
            android:paddingTop="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@drawable/radiobutton_textcolor"
            android:drawableTop="@drawable/radiobutton_record_imgcolor"
            android:gravity="center_horizontal"
            android:drawablePadding="3dp"
            android:textSize="14sp"
            android:text="记录"/>
        <TextView
            android:id="@+id/main_tv_service"
            android:layout_width="0dp"
            android:paddingTop="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@drawable/radiobutton_textcolor"
            android:drawableTop="@drawable/radiobutton_service_imgcolor"
            android:gravity="center_horizontal"
            android:drawablePadding="3dp"
            android:textSize="14sp"
            android:text="服务"/>
        <TextView
            android:id="@+id/main_tv_me"
            android:layout_width="0dp"
            android:paddingTop="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@drawable/radiobutton_textcolor"
            android:drawableTop="@drawable/radiobutton_me_imgcolor"
            android:gravity="center_horizontal"
            android:drawablePadding="3dp"
            android:textSize="14sp"
            android:text="我的" />
    </LinearLayout>
    <View
        android:id="@+id/main_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_8a8a8a"
        android:layout_above="@id/main_ll"></View>
    <com.xunhe.ilpw.view.BaseViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_line"></com.xunhe.ilpw.view.BaseViewPager>
</RelativeLayout>
    </LinearLayout>
</layout>
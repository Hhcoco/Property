<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/surecanceldialog_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="我是标题"
        android:paddingTop="10dp"
        android:textColor="@color/color_009FF8"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:background="@color/color_8a8a8a"></View>
    <TextView
        android:id="@+id/surecanceldialog_tv_body"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:text="我是正文"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_2B2B2B"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:background="@color/color_009FF8"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_8a8a8a"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/surecanceldialog_tv_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="确认"
            android:gravity="center"
            android:textSize="18sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/color_009FF8"/>
        <TextView
            android:id="@+id/surecanceldialog_tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="0.5px"
            android:background="@android:color/white"
            android:text="取消"
            android:gravity="center"
            android:textSize="18sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/color_8a8a8a"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_009FF8"></View>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout><data></data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_dbdbdb"
    tools:context="com.xunhe.ilpw.activity.ChangePwdActivity">
    <RelativeLayout
        android:background="@color/color_009FF8"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:id="@+id/changepwd_ll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="30dp">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/icon_left_white"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <ImageView
            android:id="@+id/register_img_code"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_register_code"/>
        <TextView
            android:id="@+id/changepwd_tv_getcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_009FF8"
            android:textSize="14sp"
            android:layout_alignParentRight="true"/>
        <EditText
            android:id="@+id/changepwd_et_code"
            android:layout_toRightOf="@id/register_img_code"
            android:background="@null"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@id/changepwd_tv_getcode"
            android:hint="请输入验证码"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="5dp"
            android:background="@color/color_8a8a8a"
            android:layout_below="@id/changepwd_et_code"></View>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <ImageView
            android:id="@+id/register_img_pwd"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/icon_register_pwd"/>
        <EditText
            android:id="@+id/changepwd_et_pwd"
            android:layout_toRightOf="@id/register_img_pwd"
            android:background="@null"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:password="true"
            android:hint="请输入新密码"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="5dp"
            android:background="@color/color_8a8a8a"
            android:layout_below="@id/changepwd_et_pwd"></View>
    </RelativeLayout>
    <TextView
        android:id="@+id/changepwd_tv_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textColor="@android:color/white"
        android:background="@color/color_009FF8"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="22dp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="提交"/>
</LinearLayout>
</layout>
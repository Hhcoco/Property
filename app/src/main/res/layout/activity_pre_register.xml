<?xml version="1.0" encoding="utf-8"?>
<layout><data></data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_dbdbdb"
    tools:context="com.xunhe.ilpw.activity.PreRegisterActivity">
    <RelativeLayout
        android:background="@color/color_009FF8"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:id="@+id/preregister_ll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="30dp">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/icon_left_white"/>
        </LinearLayout>
        <TextView
            android:id="@+id/preregister_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完善信息"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/preregister_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读卡"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/preregister_tv_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提交资料"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/color_8a8a8a"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"/>
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="22dp"
            android:layout_above="@id/preregister_tv_ok">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="完善身份信息(使用二代身份证)"
                    android:textSize="16sp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓　　名"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/preregister_tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textCursorDrawable="@null"
                        android:background="@null"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="16dp"
                        android:textColor="@color/color_8B8B8B"
                        android:hint="请刷卡读取信息"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"
                    android:layout_marginTop="1px"
                    android:paddingBottom="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证号"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/preregister_tv_idcard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textCursorDrawable="@null"
                        android:background="@null"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="16dp"
                        android:textColor="@color/color_8B8B8B"
                        android:hint="请刷卡读取信息"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="身份验证(需本人面部图片)"
                    android:textSize="16sp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/preregister_img_now"
                        android:layout_width="120dp"
                        android:layout_height="160dp"
                        android:background="@drawable/icon_camera"/>
                    <ImageView
                        android:id="@+id/preregister_img_card"
                        android:layout_marginLeft="12dp"
                        android:layout_width="120dp"
                        android:layout_height="160dp" />
                    <LinearLayout
                        android:id="@+id/preregister_ll_loading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/preregister_img_fail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="invisible"
                                android:background="@drawable/fail"/>
                        <ProgressBar
                            android:id="@+id/preregister_progressbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="invisible"
                            android:indeterminateDrawable="@drawable/loading_circle"
                            android:indeterminate="false"/>
                        </FrameLayout>
                        <TextView
                            android:id="@+id/preregister_tv_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="invisible"
                            android:layout_marginTop="5dp"
                            android:text="上传中..."/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="手机号码"
                    android:textSize="16sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="1px"
                    android:background="@color/white"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号码"
                        android:textSize="14sp"/>
                    <EditText
                        android:id="@+id/preregister_et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textCursorDrawable="@null"
                        android:background="@null"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="16dp"
                        android:textColor="@color/color_8B8B8B"
                        android:hint="请输入手机号码"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="小区信息"
                    android:textSize="16sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小区名称"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/preregister_tv_building"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textCursorDrawable="@null"
                        android:background="@null"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="16dp"
                        android:textColor="@color/color_8B8B8B"
                        android:hint=""/></LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@color/white"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content">
                            <com.xunhe.ilpw.view.WheelView
                                android:id="@+id/preregister_wheelview_building"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"></com.xunhe.ilpw.view.WheelView></LinearLayout>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:layout_gravity="center_vertical"
                                android:text="栋"/>
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content">
                        <com.xunhe.ilpw.view.WheelView
                            android:id="@+id/preregister_wheelview_unit"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"></com.xunhe.ilpw.view.WheelView></LinearLayout>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:text="单元"/>
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content">
                        <com.xunhe.ilpw.view.WheelView
                            android:id="@+id/preregister_wheelview_room"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"></com.xunhe.ilpw.view.WheelView></LinearLayout>
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="类　　型"
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"/>
                    <RadioGroup
                        android:id="@+id/preregister_radiogroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/preregister_rb_living"
                            android:checked="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="住户"/>
                        <RadioButton
                            android:id="@+id/preregister_rb_tenant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="租户"/>
                    </RadioGroup>
                </LinearLayout>


            </LinearLayout>

        </ScrollView>
    </RelativeLayout>
</LinearLayout>
</layout>
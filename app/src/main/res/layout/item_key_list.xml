<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    <View
        android:id="@+id/item_key_list_line1"
        android:layout_width="1px"
        android:layout_height="8dp"
        android:layout_marginLeft="19dp"
        android:background="@color/color_8a8a8a"></View>
    <ImageView
        android:id="@+id/item_key_list_img_ring"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/selector_bt_ring"
        android:layout_below="@id/item_key_list_line1"/>
    <TextView
        android:id="@+id/item_key_list_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_key_list_img_ring"
        android:layout_alignBottom="@id/item_key_list_img_ring"
        android:text="小区正大门"
        android:textSize="18sp"
        android:textColor="@color/color_8B8B8B"
        android:layout_toRightOf="@id/item_key_list_img_ring"
        android:layout_marginLeft="8dp"/>
    <TextView
        android:id="@+id/item_key_list_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_home_list_clock"
        android:drawablePadding="5dp"
        android:text="有效期：2016年10月1日"
        android:textSize="14sp"
        android:textColor="@color/color_666666"
        android:layout_marginTop="5dp"
        android:layout_below="@id/item_key_list_tv_name"
        android:layout_alignLeft="@id/item_key_list_tv_name"/>
    <TextView
        android:id="@+id/item_key_list_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开门免密"
        android:textSize="14sp"
        android:drawableLeft="@drawable/icon_home_list_unlock"
        android:drawablePadding="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/item_key_list_tv_time"
        android:layout_alignLeft="@id/item_key_list_tv_time"
        android:paddingBottom="5dp"/>
    <View
        android:id="@+id/item_key_list_line2"
        android:layout_width="1px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:background="@color/color_8a8a8a"
        android:layout_alignBottom="@id/item_key_list_tv_type"
        android:layout_below="@id/item_key_list_img_ring"></View>
    <ImageView
        android:id="@+id/item_key_list_img_opendoor"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/img_opendoor_selecor"/>

</RelativeLayout>
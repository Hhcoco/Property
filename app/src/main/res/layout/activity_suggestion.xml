<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data></data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_dbdbdb"
    tools:context="com.xunhe.ilpw.activity.SuggestionActivity">
    <RelativeLayout
        android:background="@color/color_009FF8"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:id="@+id/suggest_ll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="30dp">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/icon_left_white"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ScrollView
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/suggest_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="5"/>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="12dp"
        android:background="@color/white"
        android:layout_marginTop="22dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/suggest_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择社区"/>
    <Spinner
        android:id="@+id/suggest_spinner"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="1px"
        android:layout_marginBottom="12dp"
        android:background="@color/white"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/suggest_flag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>
    </RelativeLayout>
    <TextView
        android:id="@+id/suggest_tv_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="提交"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bt_connect"
        android:layout_marginRight="16dp"/>
</LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data></data>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_dbdbdb"
    tools:context="com.xunhe.ilpw.activity.KeyDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:background="@color/color_009FF8"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/keydetail_tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:text="取 消"/>
        </LinearLayout>
        <TextView
            android:id="@+id/keydetail_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钥匙详情"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/keydetail_top_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编 辑"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="16dp"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:drawablePadding="12dp"
        android:drawableLeft="@drawable/icon_key"
        android:text="钥匙："/>
            <EditText
                android:id="@+id/keydetail_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                android:cursorVisible="false"
                android:textSize="14sp"
                android:background="@null"
                android:textCursorDrawable="@color/color_2B2B2B" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <TextView
        android:id="@+id/keydetail_tv_share"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/tv_corner"
        android:paddingTop="6dp"
        android:layout_marginTop="12dp"
        android:paddingBottom="6dp"
        android:textSize="16sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="分享钥匙"/>
    <TextView
        android:id="@+id/keydetail_tv_applydelay"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/tv_corner_blue"
        android:paddingTop="6dp"
        android:layout_marginTop="12dp"
        android:paddingBottom="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:textSize="16sp"
        android:gravity="center"
        android:text="申请延期"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/keydetail_tv_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除钥匙"
        android:textSize="18sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:background="@color/color_009FF8"/>
</RelativeLayout>
</layout>
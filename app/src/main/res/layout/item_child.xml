<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">
    <View
        android:layout_width="1px"
        android:layout_height="12dp"
        android:layout_marginLeft="33dp"
        android:background="@color/color_dbdbdb"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="22dp"
            android:background="@drawable/icon_home_list_ring"/>
        <TextView
            android:id="@+id/item_child_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center_vertical"
            android:text="BLZX123456"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <View
        android:layout_width="1px"
        android:layout_height="22dp"
        android:layout_marginLeft="33dp"
        android:background="@color/color_dbdbdb"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_child_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:text="2016-7-21 8:57:00"/>
        </RelativeLayout>
        </LinearLayout>


</LinearLayout>